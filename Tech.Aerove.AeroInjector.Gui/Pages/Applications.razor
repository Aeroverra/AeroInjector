@page "/applications"
<h6>Applications</h6>


<div class="text-center text-light" data-mdb-toggle="modal" data-mdb-target="#addModal" id="add-app">
    Add Application
</div>
<Tech.Aerove.AeroInjector.Gui.Components.DarkModal Id="addModal" Title="Add an application" ButtonName="Add" ButtonPressed="AddApplication">
    <div class="form-group">
        <label class="form-label">Application Name</label>
        <input type="text" class="form-control" @bind="ApplicationNew.Name" />
    </div>
    <div class="form-group mt-2">
        <label class="form-label">Application Path</label>
        <input type="text" class="form-control" style="cursor:pointer;" id="app-file-pick" value="@ApplicationNew.Path" @onclick="PickApplication" />
    </div>
</Tech.Aerove.AeroInjector.Gui.Components.DarkModal>
<Tech.Aerove.AeroInjector.Gui.Components.FileItemView>
    @foreach (var item in ConfigService.GetApplications())
    {
        <Tech.Aerove.AeroInjector.Gui.Components.FileItem Name="@item.Name" Description="@item.Path" Image="@item.Image" />
    }
</Tech.Aerove.AeroInjector.Gui.Components.FileItemView>

